local Mercury = loadstring(game:HttpGet("https://raw.githubusercontent.com/deeeity/mercury-lib/master/src.lua"))()
local GUI = Mercury:Create{
    Name = "BloodyHub | Slap Royaleüëè",
    Size = UDim2.fromOffset(600, 400),
    Theme = Mercury.Themes.Dark,
    Link = "https://github.com/deeeity/mercury-lib"
}

--Values
_G.Reach = true
_G.Hitbox = true
_G.Ragdoll = true
_G.Cham = true
_G.Rig = true

--Functions
function Reach()
    loadstring(game:HttpGet("https://pastebin.com/raw/jxS60JEF", true))()
end

function Hitbox()
    loadstring(game:HttpGet(("https://gist.githubusercontent.com/stellar-4242/430ef3087d8d87eb306ca03e728ffbb8/raw/798429dd908b1f4471a1fa569ff62c5e5a93ec61/SLAP.LUA")))()
end

function Ragdoll()
    loadstring(game:HttpGet("https://pastebin.com/raw/28qZ6YBD", true))()
end

function Cham()
    getgenv().enabled = true --Toggle on/off
    getgenv().filluseteamcolor = false --Toggle fill color using player team color on/off
    getgenv().outlineuseteamcolor = false --Toggle outline color using player team color on/off
    getgenv().fillcolor = Color3.new(0, 0, 0) --Change fill color, no need to edit if using team color
    getgenv().outlinecolor = Color3.new(255, 0, 0) --Change outline color, no need to edit if using team color
    getgenv().filltrans = 0.5 --Change fill transparency
    getgenv().outlinetrans = 0 --Change outline transparency
    
    loadstring(game:HttpGet("https://raw.githubusercontent.com/zntly/highlight-esp/main/esp.lua"))()
end

function Rig()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/TheNuggetEater05/ekaMiffutSmodnaR/main/GlobalR6SkeletonESP.lua"))()

    shared.BoneESP_Settings = {
       Circle_Visible = false,
       Circle_Radius = 3,
       BoneESP_Color = Color3.fromRGB(255,255,255)
    }
end

