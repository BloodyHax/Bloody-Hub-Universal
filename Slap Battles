local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("Bloody Hub | Slap Battlesüëè", "BloodTheme")

--Tabs

local AbilityTab = Window:NewTab("Ability")
local AbilityTab1 = AbilityTab:NewSection("Ability")

local CombatTab = Window:NewTab("Combat")
local CombatTab1 = CombatTab:NewSection("Combat")

local AutofarmTab = Window:NewTab("Autofarm")
local AutofarmTab1 = AutofarmTab:NewSection("Autofarm")

local MiscTab = Window:NewTab("Misc")
local MiscTab1 = MiscTab:NewSection("Misc")

--Toggles

AbilityTab1:NewToggle("Inf Golden", "Use For Infinite Golden", function(state)
    if state then
        local args = {
            [1] = true
        }
        
        game:GetService("ReplicatedStorage").Goldify:FireServer(unpack(args))        
    else
        local args = {
            [1] = false,
            [2] = BrickColor.new(1003)
        }
        
        game:GetService("ReplicatedStorage").Goldify:FireServer(unpack(args))        
    end
end)

AbilityTab1:NewToggle("No CD rock", "no cooldown diamond", function(state)
    if state then
        game:GetService("ReplicatedStorage").Rockmode:FireServer()
    else
        game:GetService("ReplicatedStorage").Rockmode:FireServer()
    end
end)

AbilityTab1:NewToggle("Infinite Ghost", "If you hit someone, ghost still", function(state)
    if state then
        game:GetService("ReplicatedStorage").Ghostinvisibilityactivated:FireServer()
    else
        game:GetService("ReplicatedStorage").Ghostinvisibilitydeactivated:FireServer()
    end
end)

--Button

AbilityTab1:NewButton("PhaseA", "Phase Glove No CD", function()
    game:GetService("ReplicatedStorage").PhaseA:FireServer()
end)

AbilityTab1:NewButton("Inf UNO", "Infinite unoreverse cant be turn off", function()
	while wait(6) do
		game:GetService("ReplicatedStorage").ReverseAbility:FireServer()
	end
end)

CombatTab1:NewButton("Glove Reach", "like thick glove but better", function()
    loadstring(game:HttpGet("https://pastebin.com/raw/jxS60JEF", true))()
end)

CombatTab1:NewButton("HitBox Extender", "F A T people", function()
	loadstring(game:HttpGet(("https://gist.githubusercontent.com/stellar-4242/430ef3087d8d87eb306ca03e728ffbb8/raw/798429dd908b1f4471a1fa569ff62c5e5a93ec61/SLAP.LUA")))()
end)

AutofarmTab1:NewButton("take Slapples", "take slapples once", function()
    loadstring(game:HttpGet("https://pastebin.com/raw/rYYpHvDG", true))()
end)

AutofarmTab1:NewButton("Farm Slapples", "Farm slapples Forever", function()
    loadstring(game:HttpGet("https://pastebin.com/raw/9cxfguU6", true))()
end)

MiscTab1:NewButton("Bob :)", "Just Spawn Replica and kills you", function()
    local args = {
        [1] = true
    }
    
    game:GetService("ReplicatedStorage").Duplicate:FireServer(unpack(args))
    wait()
    local args = {
        [1] = game:GetService("Players").LocalPlayer.Character,
        [2] = false
    }
    
    game:GetService("ReplicatedStorage").HumanoidDied:FireServer(unpack(args))
end)

MiscTab1:NewButton("AntiMail", "Remove Mail pop up", function()
    game.ReplicatedStorage.MailPopup:Destroy()
end)
